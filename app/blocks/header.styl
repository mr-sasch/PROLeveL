// Header

// Header left
.header__left
  margin-right 210px
  display -webkit-flex
  display -ms-flex
  display flex
  align-items center

.header__left-dotted
  flex-grow 1
  display -webkit-flex
  display -ms-flex
  display flex
  justify-content space-between
  align-items center
  padding 30px 30px 60px 60px

.header__left-socials
  padding 30px 80px 60px 30px
.header__right-socials-img
  padding 0 15px

// /Header left


// Навигационное меню
.menu__button-open
  display -webkit-flex
  display -ms-flex
  display flex
  flex-direction row
  align-items center
  position absolute
  top 30px
  right 60px

.menu__button-open-picture
  width 70px
  height 70px
  border-radius 50%
  background-color #000
  position relative
  display -webkit-flex
  display -ms-flex
  display flex
  flex-direction column
  justify-content center
  align-items center

.menu__button-open-picture-dot
  width 10px
  height 10px
  background-color #fff
  border-radius 50%
.menu__button-open-picture-dot:nth-child(2)
  margin 6px 0

.menu__button-open-title
  font-size 18px
  font-weight 600
  margin-right 30px
// /Навигационное меню

// Лого
.header__left-logo-img-wrapper
  width 235px
  height 70px
  background-color #000
  display -webkit-flex
  display -ms-flex
  display flex
  justify-content center
  align-items center
.header__left-logo-img
  width 200px

.header__left-phone
  font-size 22px
  color #333
  font-weight 600
// /Лого

@media screen and (max-width 1024px)
  // уменьшаем поля экрана
  .header__left-dotted
    padding-left 10px
  .menu__button-open
    right 10px
  .header__left-socials
    padding-right 0
    padding-left 10px

@media screen and (max-width 840px)
  .header__left-dotted
    flex-direction column
  .header__left-dotted
    padding-bottom 30px
  .header__left-phone
    margin-top 20px
  .header__left-socials
    padding-top 10px
    padding-right 0

@media screen and (max-width 650px)
  .header__left
    margin-right 20px
  .header__left-socials
    padding 110px 0 0 20px

@media screen and (max-width 500px)
  .header__left
    flex-direction column
    margin-right 0
    align-items flex-start
  .header__left-dotted
    width 100%
    padding-right 10px
    padding-bottom 10px
    align-items flex-start
  .header__left-socials
    padding 10px
  .header__right-socials-img
    padding 0 10px
  .header__right-socials-img:first-child
    padding-left 0

@media screen and (max-width 430px)
  .menu__button-open-title
    display none

@media screen and (max-width 340px)
  .menu__button-open-picture
    width 50px
    height 50px
  .menu__button-open-picture-dot
    width 7px
    height 7px
  .menu__button-open-picture-dot:nth-child(2)
    margin 4px 0


